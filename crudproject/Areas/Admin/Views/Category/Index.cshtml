@model crudproject.Models.ViewModel.CategoryVM
@{
    ViewData["Title"] = "Index";
}

 <div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary"> List Of Categories</h2>
        </div>
        <div class="col-6">
             <a class=" btn btn-primary" asp-action="createUpdate" asp-controller="category"><i class="bi bi-plus-circle"></i>&nbsp; New Category</a>
        </div>
    </div>
</div>
<table class="d-lg-table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Actions
            </th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model.categories)
        {
            <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Displayorder
            </td>
            <td role="group">
               <a asp-action="createUpdate" asp-controller="category" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"></i></a>
               <a asp-action="Delete" asp-controller="category" asp-route-id="@item.Id">  <i class="bi bi-trash"></i></a>

            </td>
        </tr>
        }   
        

    </tbody>

</table>

