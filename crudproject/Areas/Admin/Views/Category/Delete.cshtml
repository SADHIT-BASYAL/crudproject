@model Category
   <form method="post">
       <div class="border-bottom p-3 mt-3">
           <div class="row pb-3">
               <h2 class="text-primary">Category</h2>
               <hr />
           </div>
           <input type="hidden"  asp-for="Id"/>
           <div asp-validation-summary="All"></div>
           <div class="row mb-3">
               <label asp-for="Name"></label>
               <input disabled asp-for="Name" asp-action="form-control" />
               <span asp-validation-for="Name" class="text-danger"></span>
           </div>

           <div class="row mb-3">
               <label asp-for="Displayorder"></label>
               <input disabled asp-for="Displayorder" asp-action="form-control" />
               <span asp-validation-for="Displayorder " class="text-danger"></span>
           </div>
           <button class="btn btn-danger" type="submit">Delete</button>
       </div>
       <a asp-action="index" asp-controller="category">Back To List</a>

   </form>

   @section scripts{
       @{
           <partial name="_ValidationScriptsPartial"/>
       }
   }